                  <pre
                    class="ide-code-mobile"><code><span class="keyword">const</span> <span class="variable">developer</span> = &#123;
  <span class="variable">{t("ide.title_var")}</span>: <span class="string">{t("ide.title_val")}</span>,
  <span class="variable">{t("ide.location_var")}</span>: <span class="string">{t("ide.location_val")}</span>,
  <span class="variable">{t("ide.education_var")}</span>: [
    <span class="string">{t("ide.education_val1")}</span>, <span class="string">{t("ide.education_val2")}</span>
  ],
  <span class="variable">{t("ide.interests_var")}</span>: [
    <span class="string">{t("ide.interests_val1")}</span>, <span class="string">{t("ide.interests_val2")}</span>, <span class="string">'AI'</span>
  ]
&#125;;

<span class="comment">{t("ide.comment")}</span></code></pre>
                </div>
              </div>
              <a
                href="mailto:franklinmdev@hotmail.com"
                class="block cursor-pointer p-2 text-right text-xs text-zinc-400 transition-colors hover:text-zinc-300 sm:text-sm"
              >
                franklinmdev@hotmail.com
              </a>
            </div>
          </div>

          <!-- Content Sections -->
          <div class="space-y-11 md:space-y-14 xl:space-y-11 2xl:space-y-14">
            <Experience />

            <hr class="hidden border-zinc-700 xl:block" />

            <Technologies />

            <hr class="hidden border-zinc-700 xl:block" />

            <Projects />

            <ContactForm
              client:visible
              translations={{
                title: t("sections.contact_title"),
                subtitle: t("contact.subtitle"),
                namePlaceholder: t("contact.form.name_placeholder"),
                emailPlaceholder: t("contact.form.email_placeholder"),
                messagePlaceholder: t("contact.form.message_placeholder"),
                sendButton: t("contact.form.send_btn"),
                sendingButton: t("contact.form.sending_btn"),
                successMessage: t("contact.form.success_msg"),
                errorMessage: t("contact.form.error_msg"),
                nameRequired: t("contact.form.name_required"),
                emailRequired: t("contact.form.email_required"),
                emailInvalid: t("contact.form.email_invalid"),
                messageRequired: t("contact.form.message_required"),
              }}
            />
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Scroll to Top Button -->
  <button
    id="scroll-to-top"
    class="pointer-events-none fixed right-4 bottom-4 flex h-12 w-12 translate-y-4 transform cursor-pointer items-center justify-center rounded-full bg-zinc-800 text-white opacity-0 shadow-lg hover:bg-violet-600 focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-zinc-900 focus:outline-none sm:right-8 sm:bottom-8 2xl:h-14 2xl:w-14"
    aria-label="Scroll to top"
    title="Scroll to top"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6 2xl:h-7 2xl:w-7"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M5 15l7-7 7 7">
      </path>
    </svg>
  </button>

  <script>
    // Hash navigation - Handle navigation from project pages
    function handleHashNavigation() {
      const hash = window.location.hash
      if (hash && hash.length > 1) {
        // Wait a moment for the page to load
        setTimeout(() => {
          const targetElement = document.querySelector(hash) as HTMLElement
          if (targetElement) {
            const headerOffset = 80 // Same offset as in Header.astro
            const targetPosition = targetElement.offsetTop - headerOffset

            window.scrollTo({
              top: targetPosition,
              behavior: "smooth",
            })
          }
        }, 100)
      }
    }

    // Run on page load
    document.addEventListener("DOMContentLoaded", handleHashNavigation)

    // Run if hash changes (for single-page navigation)
    window.addEventListener("hashchange", handleHashNavigation)

    // Scroll to Top Button functionality
    const scrollToTopBtn = document.getElementById("scroll-to-top")

    if (scrollToTopBtn) {
      window.addEventListener("scroll", () => {
        if (window.scrollY > window.innerHeight) {
          scrollToTopBtn.classList.remove(
            "opacity-0",
            "translate-y-4",
            "pointer-events-none"
          )
        } else {
          scrollToTopBtn.classList.add(
            "opacity-0",
            "translate-y-4",
            "pointer-events-none"
          )
        }
      })

      scrollToTopBtn.addEventListener("click", () => {
        window.scrollTo({ top: 0, behavior: "smooth" })
      })
    }
  </script>
</Layout>
