        class="pt-24 pb-16 xl:sticky xl:top-0 xl:flex xl:max-h-screen xl:w-2/5 xl:flex-col xl:justify-between xl:py-24 2xl:w-[38%]"
      >
        <div class="space-y-8">
          <!-- Hero Content -->
          <div>
