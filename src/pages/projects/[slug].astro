---
import { getCollection } from "astro:content"
import CustomLoader from "@/components/CustomLoader.astro"

// Generate static paths for all projects
// Only add unique slugs
export async function getStaticPaths() {
  const projects = await getCollection("projects")
  const paths: { params: { slug: string } }[] = []

  for (const project of projects) {
    // Extract just the slug part from the ID (e.g., "devflow" from "en/devflow")
    const [...slugParts] = project.id.split("/").slice(1) // Skip the language part
    const slug = slugParts.join("/")

    // Only add unique slugs (avoid duplicates from different languages)
    if (slug && !paths.some((path) => path.params.slug === slug)) {
      paths.push({
        params: { slug },
      })
    }
  }

  return paths
}

// Redirect old project URLs to localized version
const { slug } = Astro.params
---

<head>
  <title>Redirectingâ€¦</title>
  <meta http-equiv="refresh" content={`0;url=/en/projects/${slug}`} />
  <style is:inline>
    body {
      background: #111111;
    }
  </style>
</head>

<div
  class="flex min-h-screen items-center justify-center bg-[#111111] text-zinc-400"
>
  <CustomLoader size="md" class="mx-auto" />
  <script is:inline>
    setTimeout(() => {
      window.location.replace(`/en/projects/${slug}` + window.location.hash)
    }, 700)
  </script>
</div>
