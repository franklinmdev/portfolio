---
import { Image } from "astro:assets"
import errorImage from "@/assets/404.png"
import { Home, Archive, ArrowLeft } from "@lucide/astro"
import { createTranslations, type Language } from "@/i18n/utils"

export interface Props {
  lang: Language
}

const { lang } = Astro.props
const t = createTranslations(lang)
---

<main
  class="flex min-h-screen items-center justify-center px-4 py-8 pt-20 sm:py-16 sm:pt-24"
>
  <div class="mx-auto max-w-xl text-center">
    <div class="mb-6 sm:mb-8">
      <Image
        src={errorImage}
        alt="404 - Page Not Found"
        class="mx-auto h-auto w-full max-w-48 object-contain opacity-90 sm:max-w-64 md:max-w-80"
        width="320"
        height="320"
      />
    </div>

    <div class="space-y-4 sm:space-y-6">
      <h1
        class="bg-gradient-to-r from-violet-500 to-emerald-500 bg-clip-text text-2xl leading-tight font-bold text-transparent sm:text-4xl sm:leading-tight lg:text-5xl lg:leading-tight"
      >
        {t("error.404.heading")}
      </h1>

      <p
        class="mx-auto max-w-lg text-base leading-relaxed text-zinc-400 sm:text-lg"
      >
        {t("error.404.description")}
      </p>

      <div
        class="mx-auto mt-6 max-w-sm rounded-lg border border-zinc-800 bg-zinc-900/50 p-4 text-left sm:mt-8 sm:max-w-md sm:p-6"
      >
        <h3 class="mb-2 text-xs font-semibold text-zinc-300 sm:mb-3 sm:text-sm">
          {t("error.404.reasons.title")}
        </h3>
        <ul class="space-y-1.5 text-xs text-zinc-400 sm:space-y-2 sm:text-sm">
          <li class="flex items-center gap-2">
            <span class="text-violet-400">•</span>
            {t("error.404.reasons.typo")}
          </li>
          <li class="flex items-center gap-2">
            <span class="text-violet-400">•</span>
            {t("error.404.reasons.moved")}
          </li>
          <li class="flex items-center gap-2">
            <span class="text-violet-400">•</span>
            {t("error.404.reasons.outdated")}
          </li>
        </ul>
      </div>

      <div
        class="mt-6 flex flex-col items-center justify-center gap-3 sm:mt-8 sm:flex-row sm:gap-4"
      >
        <a
          href={lang === "en" ? "/" : `/${lang}/`}
          class="group inline-flex h-9 w-full transform cursor-pointer items-center justify-center gap-2 rounded-md bg-violet-500 px-4 py-2 text-sm font-medium text-white transition-all duration-200 hover:scale-105 hover:bg-violet-600 sm:w-auto"
        >
          <Home
            class="size-4 transition-transform group-hover:-translate-x-1"
          />
          {t("error.404.actions.home")}
        </a>

        <a
          href={lang === "en" ? "/#projects" : `/${lang}/#projects`}
          class="group bg-background hover:bg-accent inline-flex h-9 w-full cursor-pointer items-center justify-center gap-2 rounded-md border border-zinc-700 px-4 py-2 text-sm font-medium text-zinc-300 transition-all duration-200 hover:border-zinc-600 hover:text-white sm:w-auto"
        >
          <Archive class="size-4" />
          {t("error.404.actions.projects")}
        </a>

        <button
          onclick="history.back()"
          class="group hover:bg-accent inline-flex h-9 w-full cursor-pointer items-center justify-center gap-2 px-4 py-2 text-sm font-medium text-zinc-400 transition-colors duration-200 hover:text-zinc-300 sm:w-auto"
        >
          <ArrowLeft
            class="size-4 transition-transform group-hover:-translate-x-1"
          />
          {t("error.404.actions.previous")}
        </button>
      </div>
    </div>
  </div>
</main>

